{
  "name": "stroller-transit-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm dotenv -e .env.local -- turbo run dev",
    "build": "pnpm dotenv -e .env.local -- turbo run build",
    "lint": "turbo run lint",
    "db:push": "pnpm --filter database db:push",
    "db:migrate": "pnpm --filter database db:migrate",
    "db:generate": "pnpm --filter database db:generate",
    "db:studio": "pnpm --filter database db:studio",
    "update-odpt": "pnpm --filter scripts update-odpt"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "babel-plugin-react-compiler": "1.0.0",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "postgres": "^3.4.8",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.7.0",
  "engines": {
    "pnpm": ">=10.7.0"
  }
}
